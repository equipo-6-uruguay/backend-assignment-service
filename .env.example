# =============================================================================
# Backend Assignment Service â€” Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values.
# NEVER commit the actual .env file.

# --- Django ---
ASSIGNMENT_SERVICE_SECRET_KEY=change-me-to-a-real-secret
DJANGO_DEBUG=false
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# --- PostgreSQL ---
POSTGRES_DB=assignment_db
POSTGRES_USER=assignment_user
POSTGRES_PASSWORD=change-me
POSTGRES_HOST=db
POSTGRES_PORT=5432

# --- RabbitMQ ---
RABBITMQ_HOST=rabbitmq
RABBITMQ_EXCHANGE_NAME=ticket_events
RABBITMQ_QUEUE_ASSIGNMENT=assignment_queue
CELERY_BROKER_URL=amqp://guest:guest@rabbitmq:5672//

# --- JWT (must match the auth service signing key) ---
JWT_SECRET_KEY=change-me-to-match-auth-service

# --- CORS ---
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
CSRF_TRUSTED_ORIGINS=http://localhost:5173

# --- RabbitMQ Reconnection (optional) ---
RABBITMQ_INITIAL_RETRY_DELAY=1
RABBITMQ_MAX_RETRY_DELAY=60
RABBITMQ_RETRY_BACKOFF_FACTOR=2
RABBITMQ_MAX_RETRIES=0
